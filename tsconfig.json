{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "screens": [
        "./screens"
      ],
      "diggitfaker": [
        "./utils/faker"
      ],
      "diggitfaker/*": [
        "./utils/faker/*"
      ]
    },
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "typeRoots": [
      "./typings"
    ],
    "target": "es5"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
